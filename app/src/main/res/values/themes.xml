<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Vigilante" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorAccent">@color/iconsColor</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/navigationBarColor</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/statusBarColor</item>
    </style>

    <style name="LightText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/poppins_light</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/secondary</item>
    </style>

</resources>