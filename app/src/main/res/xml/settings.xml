<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/customizations">

        <Preference
            app:iconSpaceReserved="false"
            app:key="camera_pref_category"
            app:title="@string/camera_title" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="mic_pref_category"
            app:title="@string/microphone_title" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="location_pref_category"
            app:title="@string/location_title" />

    </PreferenceCategory>


    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/application">

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:iconSpaceReserved="false"
            app:key="pref_language"
            app:title="@string/language_title" />


        <ListPreference
            app:defaultValue="dd.MM.yyyy HH:mm:ss"
            app:entries="@array/date_formats"
            app:entryValues="@array/date_formats"
            app:iconSpaceReserved="false"
            app:key="pref_date"
            app:title="@string/date_format" />

    </PreferenceCategory>


    <SwitchPreferenceCompat
        app:iconSpaceReserved="false"
        app:key="pref_exclude_vigilante_from_notifications"
        app:summary="@string/exclude_from_notifications_expl"
        app:title="@string/exclude_from_notifications_title" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/security">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="pref_biometric_auth"
            app:summary="@string/biometric_auth_expl"
            app:title="@string/biometric_auth_title" />

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="pref_delete_history"
            app:summary="@string/history_deletion_expl"
            app:title="@string/history_deletion" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/informational">

        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_license"
            app:summary="@string/license"
            app:title="@string/license_title" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_version"
            app:title="@string/version" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_home_page"
            app:title="@string/home_page" />

    </PreferenceCategory>


</PreferenceScreen>